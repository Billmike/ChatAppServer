{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "max-line-length": {
          "options": [120]
				},
				"ordered-imports": true,
				"semi-colon": [
					true,
					"always"
				],
				"trailing-comma": [
					true,
					"always"
				]
    },
    "rulesDirectory": []
}
